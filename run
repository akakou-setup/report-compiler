#!/usr/bin/env python3

import os
import shutil

from utils.tools import launch
from utils.common import get_file_path

import argparse


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument("path")
    args = parser.parse_args()

    report_path = get_file_path('volume/report.md')
    shutil.copy(args.path, report_path)

    launch()

    print(report_path)


if __name__ == '__main__':
    main()

